                    } else if (isWindow(value)) {
                        val = '$WINDOW';
                    } else if (value && document === value) {
                        val = '$DOCUMENT';
                    } else if (isScope(value)) {
                        val = '$SCOPE';
                    }

                    return val;
                }
            }
        ]);

    </script>
}
